          <label for="username">Signup with a Username or Email Address</label>
          <input type="text" id="js-register-usernameField" class="form-control" aria-describedby="Username or Email Address" placeholder="Username or Email Address"
            name="name">
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label for="pw">Password</label>
          <input type="password" class="form-control" id="js-register-passwordField" name="pw" placeholder="Password">
        </div>
        <button type="submit" id="js-register-submitButton" class="btn btn-primary">Register</button>
      </form>
