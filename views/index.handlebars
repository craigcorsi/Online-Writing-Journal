<div class="container">
  <div class="row">
    <div class="col-12">



      <h2>Register</h2>
      <form class="create-form" method="POST" action="/register">

        <div class="form-group">
          <label for="username">Signup with your Username or Email Address</label>
          <input type="text" id="js-register-usernameField" name="name">
        </div>

        <div class="form-group">
          <label for="pw">Password</label>
          <br>
          <input type="password" id="js-register-passwordField" name="pw">
        </div>

        <button type="submit" id="js-register-submitButton">Register!</button>
      </form>



      <h2 class="page-title">Login</h2>
      <form class="create-form" method="GET" action="/dashboard">

        <div class="form-group">
          <label for="username">Login with your Username or Email Address</label>
          <input type="text" id="js-login-usernameField" name="name">
        </div>

        <div class="form-group">
          <label for="pw">Password</label>
          <br>
          <input type="password" id="js-login-passwordField" name="pw">
        </div>

        <button type="submit" id="js-login-submitButton">Login</button>
      </form>






    </div>
  </div>
</div>
<!-- END CONTENT -->